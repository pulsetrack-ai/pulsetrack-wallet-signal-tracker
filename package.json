{
  "name": "pulsetrack-browser-extension",
  "version": "1.0.0",
  "description": "Real-time Solana wallet tracker browser extension with 3D visualization",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "main": "src/index.js",
  "scripts": {
    "dev": "concurrently \"yarn workspace @pulsetrack/core dev\" \"webpack --mode development --watch\"",
    "build": "yarn workspaces run build && webpack --mode production",
    "build:extension": "webpack --mode production",
    "build:packages": "yarn workspaces run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:quick": "jest --passWithNoTests --silent",
    "lint": "eslint src/ packages/ example/ --ext .js,.jsx",
    "lint:fix": "eslint src/ packages/ example/ --ext .js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css,md}\" \"packages/**/*.{js,jsx,json,css,md}\" \"docs/**/*.md\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,json,css,md}\" \"packages/**/*.{js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist build coverage node_modules/.cache packages/*/dist packages/*/build",
    "precommit": "lint-staged",
    "release": "changeset publish",
    "version-packages": "changeset version",
    "zip": "node scripts/zip-extension.js",
    "analyze": "webpack-bundle-analyzer dist/bundle.js",
    "serve": "serve example -l 3000",
    "docs:dev": "docsify serve docs",
    "validate": "yarn lint && yarn type-check && yarn test",
    "postinstall": "husky install"
  },
  "keywords": [
    "solana",
    "wallet",
    "tracker",
    "browser-extension",
    "crypto",
    "blockchain",
    "three.js",
    "websocket",
    "real-time"
  ],
  "author": "PulseTrack Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pulsetrack/pulsetrack-browser-extension.git"
  },
  "bugs": {
    "url": "https://github.com/pulsetrack/pulsetrack-browser-extension/issues"
  },
  "homepage": "https://github.com/pulsetrack/pulsetrack-browser-extension#readme",
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-private-methods": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@changesets/cli": "^2.27.1",
    "@types/chrome": "^0.0.260",
    "@types/three": "^0.160.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.9.1",
    "eslint": "^8.56.0",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^9.0.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.1",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "serve": "^14.2.1",
    "style-loader": "^3.3.4",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@solana/web3.js": "^1.91.1",
    "three": "^0.160.0",
    "three-stdlib": "^2.35.16"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": "^1.22.0"
  },
  "browserslist": [
    "Chrome >= 88",
    "Firefox >= 78",
    "Edge >= 88"
  ],
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
